{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "noEmit": false,
    "outDir": "./dist",
    "skipLibCheck": true,
    "verbatimModuleSyntax": false
  },
  "include": [
    "src/lib/**/*",
    "src/components/**/*", 
    "src/themes/**/*",
    "src/globals.d.ts"
  ],
  "exclude": [
    "src/**/*.test.*",
    "src/**/*.spec.*",
    "node_modules/**"
  ]
} 